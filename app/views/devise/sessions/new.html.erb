<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
    <h2 class="text-center mb-4">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: 'form-control', autocomplete: "email" },
                    label_html: { class: 'form-label' } %>

        <%= f.input :password,
                    required: false,
                    input_html: { class: 'form-control', autocomplete: "current-password" },
                    label_html: { class: 'form-label' } %>

        <% if devise_mapping.rememberable? %>
          <div class="form-check my-3">
            <%= f.input :remember_me,
                        as: :boolean,
                        label_html: { class: 'form-check-label' },
                        wrapper_html: { class: 'form-check' },
                        input_html: { class: 'form-check-input' } %>
          </div>
        <% end %>
      </div>

      <div class="form-actions mt-4">
        <%= f.button :submit, "Se connecter", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
