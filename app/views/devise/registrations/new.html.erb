<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
    <h2 class="text-center mb-4">Créer un compte</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: 'form-control', autocomplete: "email" },
                    label_html: { class: 'form-label' } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { class: 'form-control', autocomplete: "new-password" },
                    label_html: { class: 'form-label' } %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: 'form-control', autocomplete: "new-password" },
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="form-actions mt-4">
        <%= f.button :submit, "S'inscrire", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
