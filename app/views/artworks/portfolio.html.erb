        <%= image_tag(
              page_image&.image&.attached? ? url_for(page_image.image) : asset_path("Portfolio-Reportage.jpg"),
              class: "img-fluid rounded-4 shadow-sm link-tile",
              style: "width: 100%; height: 550px; object-fit: cover;"
            ) %>
      <% end %>
    </div>

    <div class="col text-center">
      <h5>Photomanipulation onirique</h5>
      <%= link_to artworks_category_sub_category_path('portfolio', 'Photomanipulation Onirique'), class: "text-decoration-none text-dark" do %>
        <% page_image = PageImage.find_by(name: "Portfolio-Photomanip") %>
        <%= image_tag(
              page_image&.image&.attached? ? url_for(page_image.image) : asset_path("Portfolio-Photomanip.jpg"),
              class: "img-fluid rounded-4 shadow-sm link-tile",
