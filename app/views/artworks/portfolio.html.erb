<div class="container py-4">
  <div class="row text-center mb-4">
    <div class="col">
      <h2 class="fw-light">Portfolio</h2>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center">

    <div class="col text-center">
      <h5>Nature</h5>
      <%= link_to artworks_category_sub_category_path('portfolio', 'Nature'), class: "text-decoration-none text-dark" do %>
        <% page_image = PageImage.find_by(name: "Portfolio-Nature") %>
        <%= image_tag(
              page_image&.image&.attached? ? url_for(page_image.image) : asset_path("Portfolio-Nature.jpg"),
              class: "img-fluid rounded-4 shadow-sm link-tile",
              style: "width: 100%; height: 550px; object-fit: cover;"
            ) %>
      <% end %>
    </div>

    <div class="col text-center">
      <h5>Portrait</h5>
      <%= link_to artworks_category_sub_category_path(category: 'portfolio', sub_category: 'portrait'), class: "text-decoration-none text-dark" do %>
