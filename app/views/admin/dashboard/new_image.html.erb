<div class="p-5">
  <h1>Remplacer une image</h1>

  <%= simple_form_for @page_image, url: admin_create_image_path, html: { class: 'form-horizontal' } do |form| %>
    <% if @page_image.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@page_image.errors.count, "erreur") %> interdit la sauvegarde de l'image:</h2>
        <ul>
          <% @page_image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.input :name, collection: @image_names, label: "Nom de l'image", prompt: "SÃ©lectionnez un nom d'image", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.input :image, as: :file, label: "Image", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= form.button :submit, "Ajouter ou remplacer l'image", class: "btn btn-custom" %>
    </div>

  <% end %>
  <br>
  <%= link_to "Retour", admin_dashboard_path, class: "btn btn-custom" %>
</div>
